<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence 
						http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
	version="2.0">

	<persistence-unit name="vendasPU" transaction-type="RESOURCE_LOCAL">

   		<provider>org.hibernate.ejb.HibernatePersistence</provider>
		
		<class>com.algaworks.model.Cliente</class>
		<class>com.algaworks.model.Endereco</class>
		<class>com.algaworks.model.Grupo</class>
		<class>com.algaworks.model.Usuario</class>
		<class>com.algaworks.model.Categoria</class>
		<class>com.algaworks.model.Produto</class>
		<class>com.algaworks.model.Pedido</class>
		<class>com.algaworks.model.ItemPedido</class>

		<properties>
			<property name="javax.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
			<property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/vendas_jsf?useSSL=false"/>
			<property name="javax.persistence.jdbc.user" value="leonardo"/>
			<property name="javax.persistence.jdbc.password" value="senha"/>

			<property name="hibernate.hbm2ddl.auto" value="create"/>
			<property name="hibernate.show_sql" value="true"/>
			<property name="hibernate.dialect" value="org.hibernate.dialect.MySQL5InnoDBDialect"/>
		</properties>
	</persistence-unit>

</persistence>